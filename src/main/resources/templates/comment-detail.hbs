{{#partial "content"}}
    <h3>Update review for {{game.name}}</h3>
    <form action="/developers/{{developer.id}}/games/{{game.id}}/comments/{{review.id}}/edit" method="post">
        <label for="rating">Rating</label>
        <select name="rating" id="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <br>
        <label for="comment">Comment:</label>
        <textarea name="comment" id="comment" class="form-control" rows="3" value="{{review.comment}}"></textarea>
        <br>
        <button class="btn btn-success">Update my comment</button>
    </form>
{{/partial}}

{{> layout.hbs}}