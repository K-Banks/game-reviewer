{{#partial "content"}}
    {{#if developer}}
        <h3>{{developer.name}}'s games:</h3>
    {{else}}
        <form action="/games/sort" method="post">
            <label for="sort">Sort by</label>
            <select name="sort" id="sort">
                <option value="name">Name</option>
                <option value="rating">Rating</option>
                <option value="minPlayers">Minimum Players</option>
                <option value="maxPlayers">Maximum Players</option>
                <option value="timeToPlay">Time to Play</option>
            </select>
            <button type="Submit" class="btn btn-success">Sort</button>
        </form>
        <h3>All games:</h3>
    {{/if}}

    {{#if games}}
        <ul>
            {{#each games}}
                <li><h4>{{name}}</h4>
                    {{#if rating}}
                        <h5>Rating: {{rating}}/5</h5>
                    {{else}}
                        <h5>Rating: No reviews yet</h5>
                    {{/if}}
                    <a href="/developers/{{developerId}}/games/{{id}}">Details</a>
                    <br>
                    <a href="/developers/{{developerId}}/games/{{id}}/delete">Delete</a>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <h4>There are no games to display</h4>
    {{/if}}

    {{#if developer}}
        <a href="/developers/{{developer.id}}/games/new">Add new game</a>
    {{else}}
        <a href="/games/new">Add new game</a>
    {{/if}}

{{/partial}}

{{> layout.hbs}}