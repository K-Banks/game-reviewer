{{#partial "content"}}
    <h3>{{game.name}}</h3>
    <h4>Genre: {{game.genre}}</h4>
    <h4>Players: {{game.minPlayers}}-{{game.maxPlayers}}</h4>
    <h4>Time to Play: {{game.timeToPlay}} minutes</h4>
    <a href="/developers/{{developer.id}}/games/{{game.id}}/edit">Edit</a>
    <a href="/developers/{{developer.id}}/games/{{game.id}}/delete">Delete</a>

    {{#if reviews}}
        <br>
        <hr>
        <h2>Reviews:</h2>
        <ul>
        {{#each reviews}}
            <li>
                <h3>{{rating}}</h3>
            <p>{{comment}}</p>
                <br>
                <a href="/developers/{{developer.id}}/games/{{game.id}}/comments/{{id}}">Edit this review</a>
                <br>
                <a href="/developers/{{developer.id}}/games/{{game.id}}/comments/{{id}}/delete">Delete this review</a>
            </li>
        {{/each}}
        </ul>
    {{/if}}

    <br>
    <hr>
    <h3>Review this game!</h3>
    <form action="/developers/{{developer.id}}/games/{{game.id}}/comments/new" method="post">
        <label for="rating">Rating</label>
        <select name="rating" id="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <br>
        <label for="comment">Comment:</label>
        <textarea name="comment" id="comment" class="form-control" rows="3"></textarea>
        <br>
        <button class="btn btn-success">Add my comment</button>
    </form>
{{/partial}}

{{> layout.hbs}}